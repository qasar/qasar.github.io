# HTTP Headers for GitHub Pages
# Note: GitHub Pages doesn't natively support custom headers, but if you use Cloudflare
# or another CDN in front, you can use these headers

# Cache static assets aggressively (1 year)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS and JS (1 year)
/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache images (1 year)
/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

# Cache photo2026 assets aggressively (1 year)
/assets-photo2026/*
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.gif
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML pages aggressively (24 hours) - most content is static
/*
  Cache-Control: public, max-age=86400, must-revalidate

# Writings page updates more frequently (few times a year) - shorter cache (6 hours)
/writings/*
  Cache-Control: public, max-age=21600, must-revalidate

# Cache favicon (1 month - rarely changes)
/favicon.ico
  Cache-Control: public, max-age=2592000

